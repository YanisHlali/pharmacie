<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>

<body>
    <%- include("header") %>
    <% if (etat == "modifier") { %>
    <h2 class="title is-2" style="text-align:center;">Modifier un patient</h2>
        <div class="container">
            <form action="/views/informations.ejs/modifierPatient/<%= result[0].id %>" method="POST">
    <% } else { %>
    <h2 class="title is-2" style="text-align:center;">Ajouter un nouveau patient</h2>
        <div class="container">
            <form action="/views/nouveau.ejs" method="post">
    <% } %>
                <div class="field">
                    <label class="label">Nom</label>
                    <div class="control">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="text" name="nom" value="<%= result[0].nom %>" placeholder="Nom" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="text" name="nom" placeholder="Nom" autocomplete="off">
                        <% } %>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Prenom</label>
                    <div class="control">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="text" name="prenom" value="<%= result[0].prenom %>" placeholder="Prenom" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="text" name="prenom" placeholder="Prenom" autocomplete="off">
                        <% } %>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Sexe</label>
                    <div class="control">
                        <div class="select">
                            <select name="sexe">
                                <option value="homme">Homme</option>
                                <option value="femme">Femme</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Date de Naissance</label>
                    <div class="control">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="date" name="dateDeNaissance" value="<%= result[0].dateDeNaissance %>" placeholder="Date" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="date" name="dateDeNaissance" placeholder="Date" autocomplete="off">
                        <% } %>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Adresse</label>
                    <div class="control">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="text" name="adresse" value="<%= result[0].adresse %>" placeholder="Adresse" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="text" name="adresse" placeholder="Adresse" autocomplete="off">
                        <% } %>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Numéro de sécurité sociale</label>
                    <div class="control">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="number" name="numSecuSocial" value="<%= result[0].numSecuSocial %>" placeholder="Numéro de sécurité sociale" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="number" name="numSecuSocial" placeholder="Numéro de sécurité sociale" autocomplete="off">
                        <% } %>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Téléphone</label>
                    <div class="control">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="number" name="telephone" value="<%= result[0].telephone %>" placeholder="Téléphone" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="number" name="telephone" placeholder="Téléphone" autocomplete="off">
                        <% } %>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Email</label>
                    <div class="control has-icons-left has-icons-right">
                        <% if (etat == "modifier") { %>
                        <input class="input" type="email" name="email" value="<%= result[0].email %>" placeholder="Email input" autocomplete="off">
                        <% } else { %>
                        <input class="input" type="email" name="email" placeholder="Email input" autocomplete="off">
                        <% } %>
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                </div>

                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link">Envoyer</button>
                    </div>
                </div>
            </form>
        </div>
</body>

</html>